<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivities.AddLocation">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Back"
        android:textColor="#688c8c"
        android:shadowColor="@android:color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:onClick="openAddEditLocationActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape4"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add Location"
        android:textColor="#182526"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/back_btn"/>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        android:visibility="visible"
        android:layout_below="@id/textView3"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/divider5">

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_street_address"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>


<TextView
    android:id="@+id/tv_upload_image_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Click Below to Open Camera"
    android:textSize="18sp"
    android:textColor="#FF3B5B5D"
    android:layout_above="@id/iv_preview"
    android:layout_margin="5dp"
    android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_margin="25dp"
        android:background="@drawable/ic_menu_camera"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>


    <Button
        android:id="@+id/add_location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Submit"
        android:textColor="#FF3B5B5D"
        android:shadowColor="@android:color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:layout_centerInParent="true"
        android:layout_below="@id/iv_preview"
        android:background="@drawable/shape4"/>




</RelativeLayout>