<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivities.AddLocation">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add Location"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true"/>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        android:visibility="visible"
        android:layout_below="@id/textView3"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/divider5">

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_street_address"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>


<TextView
    android:id="@+id/tv_upload_image_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Upload Image"
    android:layout_below="@id/et_layout_address"
    android:layout_margin="10dp"
    android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_upload_image_title"
        android:background="@drawable/icons8_camera_100"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/add_location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/shape"/>


    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Back"
        android:onClick="openAddEditLocationActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape"/>

</RelativeLayout>