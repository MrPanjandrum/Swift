<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/parent_layout">

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:visibility="visible"
        android:layout_margin="10dp"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start">

    <TextView
        android:id="@+id/recycler_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Task"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

<ImageView
    android:id="@+id/recycler_task_status"
    android:src="@drawable/icons8_traffic_light_64"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_gravity="center_vertical"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"

   />

</RelativeLayout>


    <TextView
        android:id="@+id/recycler_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Sample Description - The quick brown fox jumped over the lazy dog."
        android:layout_marginTop="5dp"/>



</LinearLayout>