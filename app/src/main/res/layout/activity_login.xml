<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity.LoginActivity"
    android:background="@drawable/gradient_list">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:contentDescription="logo"
        app:srcCompat="@drawable/hive5_transparent"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign-In"
        android:textSize="15sp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/icons8_email_32"
        android:hint=" E-Mail"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:layout_below="@id/textView4"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/icons8_password_32"
        android:hint=" Password"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/login_email"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Sign In"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@id/login_password"
        android:layout_margin="2dp"
        android:background="@drawable/shape"
        />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openRegisterActivity"
        android:text="Don't have an account? Register Here"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />



</RelativeLayout>