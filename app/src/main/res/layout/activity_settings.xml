<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivities.SettingsActivity"
    android:background="#E0E0E0">

    <Button
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape4"
        android:onClick="openHomeActivity"
        android:text="Back"
        android:textColor="#FF3B5B5D"
        android:shadowColor="@android:color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_tools_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Tools"
        android:textColor="#FF3B5B5D"
        android:shadowColor="@android:color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textSize="20sp"
        android:layout_below="@id/home_btn"
        android:layout_centerHorizontal="true"/>



    <Button
        android:id="@+id/add_edit_loc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shape4"
        android:text="Add \nLocation"
        android:textColor="#FF3B5B5D"
        android:textSize="18sp"
        android:shadowColor="@android:color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textStyle="normal"
        android:layout_toLeftOf="@id/center_point"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/center_point"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/add_edit_tsk_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shape4"
        android:text="Add \nTask"
        android:textColor="#FF3B5B5D"
        android:textSize="18sp"
        android:shadowColor="@android:color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textStyle="normal"
        android:layout_toRightOf="@id/center_point"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/about_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shape4"
        android:text="About"
        android:textColor="#FF3B5B5D"
        android:textSize="18sp"
        android:shadowColor="@android:color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textStyle="normal"
        android:layout_below="@id/add_edit_loc_btn"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>