<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivities.SettingsActivity"
    android:orientation="vertical"
    android:background="@drawable/pink_cement">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:textColor="@android:color/white"
        android:textSize="30sp"/>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp">

        <Button
            android:id="@+id/add_edit_loc_btn"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:text="Add \nLocation"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/add_edit_tsk_btn"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:text="Add \nTask"
            android:layout_row="0"
            android:layout_column="1"/>

        <Button
            android:id="@+id/add_edit_insp_btn"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:text="Add Inspection"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button
            android:id="@+id/add_report_btn"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:text="Add \nReport"
            android:layout_row="1"
            android:layout_column="1"/>








    </GridLayout>

</LinearLayout>