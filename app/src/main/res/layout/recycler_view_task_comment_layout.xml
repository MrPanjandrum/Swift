<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_comment_layout"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/recycler_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example Date: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#182526"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/recycler_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example Comment..."
        android:textSize="20sp"
        android:textColor="#182526"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/recycler_comment_date"/>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@id/recycler_comment"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
